{
  "name": "ezticket-nodejs-sandbox-webservice",
  "version": "0.0.1",
  "main": "app.js",
  "private": false,
  "scripts": {
    "start": "node app.js",
    "test": "mocha --timeout 10000 --exit",
    "coverage": "nyc --reporter=text --reporter=html npm test",
    "generate-docs": "jsdoc -c .jsdoc.json"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "**/*.js",
      "./*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**",
      "**/docs/**"
    ],
    "all": true
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.0.40",
    "console-table-printer": "^2.3.11",
    "docdash": "^1.2.0",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "truffle": "^5.1.37",
    "web3": "^1.2.11"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "jsdoc": "^3.6.5",
    "mocha": "^8.0.1",
    "morgan": "~1.9.1",
    "nyc": "^15.1.0",
    "standardx": "^5.0.0"
  }
}
