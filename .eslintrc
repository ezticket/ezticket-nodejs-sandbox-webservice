{
  "rules": {
    "handle-callback-err": "off",
    "prefer-promise-reject-errors": "off",
    "no-undef": "warn",
    "no-var": "warn",
    "prefer-const": "warn",
    "no-unused-vars": "warn",
    "indent": [
      "warn",
      2
    ],
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  }
}
